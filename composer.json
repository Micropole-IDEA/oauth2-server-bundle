    "keywords": ["oauth", "oauth2", "security"],
    "homepage": "http://github.com/micropole-idea/oauth2-server-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Brent Shaffer",
            "email": "bshafs@gmail.com"
        }
    ],
    "minimum-stability":"stable",
    "require": {
        "php": ">=7.4",
        "bshaffer/oauth2-server-php": ">=1.0",
        "micropole-idea/oauth2-server-httpfoundation-bridge": "^1.5.0",
        "symfony/console": "4.4.*",
        "symfony/security-bundle": "4.4.*",
        "sensio/framework-extra-bundle": "^5.6",
        "twig/twig": "^3.3",
        "symfony/yaml": "^5.2",
        "symfony/cache": "^5.2"
    },
    "require-dev": {
        "doctrine/orm": "~2.4,>=2.4.5",
